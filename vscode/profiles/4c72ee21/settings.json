{
    "emacs-mcx.strictEmacsMove": false,
    "terminal.external.osxExec": "Warp.app",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.shellIntegration.history": 10000,
    "terminal.integrated.cursorStyle": "line",
    "zig.zigPath": "/usr/local/bin/zig",
    "zig.zls.path": "~/.local/bin/zls",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "workbench.editor.showTabs": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.inlayHints.enabled": "offUnlessPressed", // disable function inline paremeter hints
    "workbench.colorTheme": "Nord",
    "remote.SSH.defaultExtensions": [
        "ziglang.vscode-zig",
        "patbenatar.advanced-new-file",
        "sleistner.vscode-fileutils",
        "kahole.magit",
        "webfreak.debug",
        "tintinweb.graphviz-interactive-preview",
        "foxundermoon.shell-format",
        "ianic.zig-language-extras"
    ],
    "workbench.editor.enablePreview": false,
    "terminal.integrated.fontSize": 15,
    "cSpell.userWords": [
        "aarch",
        "alloc",
        "comptime",
        "curr",
        "defaultsauto",
        "deinit",
        "dxabcdef",
        "elems",
        "fontcolor",
        "fontsize",
        "graphviz",
        "ianic",
        "magit",
        "numpad",
        "orelse",
        "preoder",
        "Preorder",
        "Prng",
        "struct",
        "testdata",
        "usize"
    ],
    // Specify paths/files to ignore.
    "cSpell.ignorePaths": [
        ".vscode",
        "**/settings.json",
        "**/usr/local/zig/**",
        "node_modules",
        "vscode-extension", //
        ".git", // Ignore the .git directory
    ],
    "graphviz-interactive-preview.renderLockAdditionalTimeout": 10000,
    "rewrap.wholeComment": false,
    "files.simpleDialog.enable": true,
    "terminal.integrated.fontFamily": "SauceCodePro Nerd Font Mono",
}